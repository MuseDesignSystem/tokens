{
  "name": "@musedesignsystem/tokens",
  "version": "2.1.9-beta",
  "description": "Tokens for the Cisco Muse Design System",
  "main": "dist/tokens.js",
  "repository": {
    "url": "https://github.com/MuseDesignSystem/tokens",
    "type": "git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "author": "Muse Design System Team",
  "license": "UNLICENSED",
  "private": false,
  "scripts": {
    "build": "npm run clean && npm run token-transform && node scripts/build.js",
    "clean:dependencies": "rimraf \"node_modules\"",
    "clean": "rimraf \"dist\"",
    "prepare": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "release:major": "standard-version --release-as major",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release": "standard-version",
    "token-transform": "npx token-transformer src/figma-token-source.json src/style-dictionary-ready.json --resolveReferences=math --expandTypography",
    "watch": "watch \"npm build\" \"properties\""
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@divriots/style-dictionary-to-figma": "^0.2.1",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "param-case": "^3.0.4",
    "pinst": "^3.0.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "style-dictionary": "^3.7.1",
    "token-transformer": "^0.0.24",
    "typescript": "^4.7.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,json}": [
      "eslint . --fix",
      "prettier --write ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
